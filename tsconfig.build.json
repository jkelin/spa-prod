    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["es5", "es2015.promise"],
    "types": ["node", "mocha"]
  },
  "include": ["src/**/*"]
}
