{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["es5", "es2015.promise"],
    "types": ["node", "mocha"]
  },
  "include": ["src/**/*", "test/**/*"],
  "typedocOptions": {
    "mode": "file",
    "out": "api",
    "theme": "minimal",
    "exclude": "src/!(index|types|server).ts"
  }
}
